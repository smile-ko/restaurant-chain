<div class="content_container">
  <div class="table">
    <div class="table_head">
      <div class="table_title">
        <h1>Bàn đặt</h1>
      </div>
      <div class="table_action">
        <ul class="table_tab">
          <li class="active"><a href="#">Danh sách</a></li>
        </ul>
        <div class="table_totalItem">
          Tổng: <b id="total_item">0</b> Bàn đặt
        </div>
      </div>
    </div>
    <div class="table_main animation" id="table_main">
      <div class="table_loader">
        <div class="loader"></div>
      </div>
      <div class="top_table">
        <div
          class="table_right"
          style="display: flex; align-items: center; gap: 10px"
        >
          <div class="table_search">
            <input
              id="search"
              type="text"
              placeholder="Tìm kiếm..."
              style="width: auto"
            />
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
          <div class="form_group">
            <div class="form_field">
              <input
                placeholder="Ngày bắt đầu"
                name="startDay"
                id="startDay"
                class="form_input"
                type="date"
                style="padding: 8px 20px; border-radius: 6px"
              />
              <label for="startDay" class="form_label"> Bắt đầu</label>
            </div>
          </div>
          <div class="form_group" style="margin-top: 0">
            <div class="form_field">
              <input
                type="date"
                placeholder="Ngày kết thúc"
                name="endDay"
                id="endDay"
                class="form_input"
                style="padding: 8px 20px; border-radius: 6px"
              />
              <label for="endDay" class="form_label">Kết thúc</label>
            </div>
          </div>
          <button
            class="modal-open btn btn_primary table_add"
            style="padding: 10px 20px"
            id="filter"
          >
            <i class="fa-solid fa-filter"></i>
          </button>
          <button
            class="modal-open btn btn_secondary table_add"
            style="padding: 10px 20px"
            id="clear-filter"
          >
            <i class="fa-solid fa-filter-circle-xmark"></i>
          </button>
        </div>
        <div class="table_left">
          <!-- <button
            class="modal-open btn btn_primary table_add"
            data-modal-target="#create-modal"
          >
            Thêm mới
          </button> -->
        </div>
      </div>
      <div class="table_content">
        <!-- Table root -->
        <table id="table"></table>
      </div>
    </div>
  </div>
</div>
<style>
  .btn_edit,
  .btn_show,
  .btn_delete {
    display: none;
  }

  .edit_customer {
    display: inline-block !important;
  }
</style>

